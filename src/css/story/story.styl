/* CUSTOM STORY STYLE */

body
    padding max(5vw, 1vw) 
    padding-bottom 0em

@font-face
	font-family Avenir

.wrapper-container
	height 45vw
	width 90%
	position relative
	margin 0 auto

#graphic-wrapper
	height 100vh
	width 100%
	position relative
    overflow visible
    fill black


.link-text:hover
	text-decoration none 
	color #04A933
	font-weight 700px
	border-bottom 2px solid #04A933

.link-text-color
	color #fff

.positive-ridgeline-path
	color #54a0ff

.graphic-header
	margin 0 auto
	text-align center

#toggle-container
	width 100%
	height 40px
	text-align center

button.toggle
    font-size 20px
    text-align center
    text-decoration none
    color  #838383 /* #130C0E black */
    background-color #e3e3e3 /* #4CAF50 green */
    width 160px
    border 0
    padding 4px
    display inline-block
    margin 0

button.toggle:focus
    outline 0

#toggle-left
    position relative
    border-top-left-radius 8px
    border-bottom-left-radius 8px
    background-color #88888811
    border 1px solid #888888
    color #000000
    font-weight bold

#toggle-middle
    position relative
    background-color white
    border 1px solid #83838344
    color #83838388

#toggle-right
    position relative
    border-top-right-radius 8px
    border-bottom-right-radius 8px
    background-color white
    border 1px solid #83838344
    color #83838388